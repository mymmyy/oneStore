<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--编码过滤器-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>cn.onestore.web.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--自动登陆过滤器-->
    <filter>
        <filter-name>AutoLoginFilter</filter-name>
        <filter-class>cn.onestore.web.filter.AutoLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AutoLoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--首页随机加载商品过滤器-->
    <filter>
        <filter-name>RandomLoadProductFilter</filter-name>
        <filter-class>cn.onestore.web.filter.RandomLoadProductFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RandomLoadProductFilter</filter-name>
        <url-pattern>/product</url-pattern>
    </filter-mapping>



    <!--验证码生成-->
    <servlet>
        <servlet-name>CheckCodeServlet</servlet-name>
        <servlet-class>cn.onestore.utils.CheckCodeServlet</servlet-class>
    </servlet>
    <!--用户-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>cn.onestore.web.servlet.UserServlet</servlet-class>
    </servlet>
    <!--店铺-->
    <servlet>
        <servlet-name>ShopServlet</servlet-name>
        <servlet-class>cn.onestore.web.servlet.ShopServlet</servlet-class>
    </servlet>
    <!--添加商品-->
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>cn.onestore.web.servlet.AddProductServlet</servlet-class>
    </servlet>
    <!--商品-->
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>cn.onestore.web.servlet.ProductServlet</servlet-class>
    </servlet>
    <!--购物车-->
    <servlet>
        <servlet-name>ShopcartServlet</servlet-name>
        <servlet-class>cn.onestore.web.servlet.ShopcartServlet</servlet-class>
    </servlet>
    <!--订单-->
    <servlet>
        <servlet-name>OrdersServlet</servlet-name>
        <servlet-class>cn.onestore.web.servlet.OrdersServlet</servlet-class>
    </servlet>



    <!--验证码生成-->
    <servlet-mapping>
        <servlet-name>CheckCodeServlet</servlet-name>
        <url-pattern>/checkCode</url-pattern>
    </servlet-mapping>
    <!--用户-->
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <!--店铺-->
    <servlet-mapping>
        <servlet-name>ShopServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <!--添加商品-->
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/addproduct</url-pattern>
    </servlet-mapping>
    <!--商品-->
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <!--购物车-->
    <servlet-mapping>
        <servlet-name>ShopcartServlet</servlet-name>
        <url-pattern>/shopcart</url-pattern>
    </servlet-mapping>
    <!--订单-->
    <servlet-mapping>
        <servlet-name>OrdersServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
</web-app>